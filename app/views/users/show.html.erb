<div class="container">
  <div class="row">
    <div align="center" class="col-md-6 col-md-offset-3">
    <h1>Profile Information</h1>
      User: <%= @user.name %><br>
      Email: <%= @user.email %><br><br>
      <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-info" %>
    </div><br>
    <div align="left" class="col-md-6">
      <h2>Past Orders</h2>
      <div class="container">
          <div class="row">
            <% @user.orders.each do |order| %>
              <div class="col-md-16">
      Date created: <%= order.created_at %><br>
      Status: <%= link_to order.status, order_path(order) %><br>
      Date status updated: <%= order.updated_at %><br>
      Total price: $<%= order.total_price %><br><br>
    </div>
    <% end %>
    </div>
    </div>
    </div>
  </div>
</div>
