<h4 align="center">Create a new account</h4>
<div align="center" class="col-md-6 col-md-offset-3">&nbsp;</div>

<div class="form">
  <div align="right" class="col-md-4 col-md-offset-3">

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :email %>
  <%= f.email_field :email %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br><br>

  <%= f.submit "Create Account", class: "btn btn-primary" %>
  <% end %><br><br>
</div>
<div align="center" class="col-md-6 col-md-offset-3">&nbsp;</div>
